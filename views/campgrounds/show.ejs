<!-- This template page will list all the details of the chosen campground. -->

<% layout("layouts/boilerplate_start") %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img class="card-img-top" src="<%= identifiedCamp.image %>" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= identifiedCamp.title %></h5>
                <p class="card-text"><%= identifiedCamp.description %></p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= identifiedCamp.location %></li>
                <li class="list-group-item">$<%= identifiedCamp.price %> per night</li>
              </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/campgrounds/<%=identifiedCamp._id%>/edit">Edit</a>
                <form class="d-inline" action="/campgrounds/<%=identifiedCamp._id%>?_method=delete" method=POST>
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
</div>