<!-- This template page will list all the details of the chosen campground. -->

<% layout("layouts/boilerplate_start") %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img class="card-img-top" src="<%= identifiedCamp.image %>" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= identifiedCamp.title %></h5>
                <p class="card-text"><%= identifiedCamp.description %></p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= identifiedCamp.location %></li>
                <li class="list-group-item">$<%= identifiedCamp.price %> per night</li>
              </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/campgrounds/<%=identifiedCamp._id%>/edit">Edit</a>
                <form class="d-inline" action="/campgrounds/<%=identifiedCamp._id%>?_method=delete" method=POST>
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
        <h2>Leave a Review:</h2>
        <form class="mb-3 validated-form" action="/campgrounds/<%=identifiedCamp._id%>/reviews" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols ="30" rows="3" required></textarea>
                <div class="valid-feedback">Valid</div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% for(let review of identifiedCamp.reviews) { %>
        <div class="mb-3">
            <p>Rating: <%= review.rating %>/5: <%= review.body %></p>
        </div>
        <% } %>
    </div>
</div>